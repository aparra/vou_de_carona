<%= form_for(@rota, :url => url_for(:controller => 'itinerario', :action => 'create'), :html => {:class => "form"}) do |f| %>
  <% if @rota.errors.any? %>
    <div id="error_explanation" class="error">
      <h3><%= pluralize(@rota.errors.count, "erro") %> ao salvar Rota:</h3>
      <ul>
	      <% @rota.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
      </ul>
    </div>
  <% end %>

	<section class="fields-section-separator">
		<div class="field large">
	    <%= f.label :nome %><br />
	    <%= f.text_field :nome %>
	  </div>
	</section>	
	<section class="fields-section-separator selection-division">
		<h3>Endereço de origem</h3>
		<%= f.fields_for :origem do |origem_form| %>
			<div class="field large">
		    <%= origem_form.label :logradouro %><br />
		    <%= origem_form.text_field :logradouro %>
		  </div>
		  <div class="field small">
		    <%= origem_form.label "Número" %><br />
		    <%= origem_form.text_field :numero %>
		  </div>
		  <div class="field medium">
		    <%= origem_form.label "Bairro" %><br />
		    <%= origem_form.text_field :bairro %>
		  </div>
		  <div class="field medium">
		    <%= origem_form.label "Cidade" %><br />
		    <%= origem_form.text_field :cidade %>
		  </div>
		  <div class="field small">
		    <%= origem_form.label "Estado" %><br />
				<%= origem_form.select 'uf', options_for_select([["Selecione", ""], ["Acre", "AC"], ["Alagoas", "AL"], ["Amazonas", "AM"], ["Amapá", "AP"], ["Bahia", "BA"], ["Ceará", "CE"], ["Distrito Federal", "DF"], ["Espirito Santo", "ES"], ["Goiás", "GO"], ["Maranhão", "MA"], ["Minas Gerais", "MG"], ["Mato Grosso do Sul", "MS"], ["Mato Grosso", "MT"], ["Pará", "PA"], ["Paraíba", "PB"], ["Pernambuco", "PE"], ["Piauí", "PI"], ["Paraná", "PR"], ["Rio de Janeiro", "RJ"], ["Rio Grande do Norte", "RN"], ["Rio Grande do Sul", "RS"], ["Rondônia", "RO"], ["Roraima", "RR"], ["Santa Catarina", "SC"], ["Sergipe", "SE"], ["São Paulo", "SP"], ["Tocantins", "TO"]]) %>
		  </div>
		<% end %>
	</section>	
	<section class="selection-division">
		<h3>Endereço de destino</h3>
		<%= f.fields_for :destino do |destino_form| %>
			<div class="field large">
		    <%= destino_form.label "Logradouro" %><br />
		    <%= destino_form.text_field :logradouro %>
		  </div>
		  <div class="field small">
		    <%= destino_form.label "Número" %><br />
		    <%= destino_form.text_field :numero %>
		  </div>
		  <div class="field medium">
		    <%= destino_form.label "Bairro" %><br />
		    <%= destino_form.text_field :bairro %>
		  </div>
		  <div class="field medium">
		    <%= destino_form.label "Cidade" %><br />
		    <%= destino_form.text_field :cidade %>
		  </div>
		  <div class="field small">
		    <%= destino_form.label "Estado" %><br />
				<%= origem_form.select 'uf', options_for_select([["Selecione", ""], ["Acre", "AC"], ["Alagoas", "AL"], ["Amazonas", "AM"], ["Amapá", "AP"], ["Bahia", "BA"], ["Ceará", "CE"], ["Distrito Federal", "DF"], ["Espirito Santo", "ES"], ["Goiás", "GO"], ["Maranhão", "MA"], ["Minas Gerais", "MG"], ["Mato Grosso do Sul", "MS"], ["Mato Grosso", "MT"], ["Pará", "PA"], ["Paraíba", "PB"], ["Pernambuco", "PE"], ["Piauí", "PI"], ["Paraná", "PR"], ["Rio de Janeiro", "RJ"], ["Rio Grande do Norte", "RN"], ["Rio Grande do Sul", "RS"], ["Rondônia", "RO"], ["Roraima", "RR"], ["Santa Catarina", "SC"], ["Sergipe", "SE"], ["São Paulo", "SP"], ["Tocantins", "TO"]]) %>
		  </div>
		<% end %>
	</section>	

  <div class="actions">
    <%= f.submit 'Cadatrar', :class => 'green button' %>
  </div>
<% end %>
